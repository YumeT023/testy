{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    // by default, typescript redefine the utilities like 'extendStatic', '_decorate'
    // use this option with 'tslib' to significantly optimize build output
    "importHelpers": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
