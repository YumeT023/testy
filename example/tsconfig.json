{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["esnext", "dom"],
    "target": "es6",
    "module": "NodeNext",
    "moduleResolution": "Node16",
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
